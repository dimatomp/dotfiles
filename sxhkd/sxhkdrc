super + shift + Return
    sakura
super + r
    dmenu_run -b -fn "Droid Sans Mono:size=8"
super + w
    nmcli_dmenu
super + {j, k}
    bspc node -f {next, prev}.local
super + S; Q
    pkill -x panel; bspc quit
super + C
    bspc node focused -c
super + S; K
    bspc node -k
alt + {h, j, k, l, grave}
    bspc node -p {west, south, north, east, cancel}
super + {f, t}
    bspc node -t {floating, tiled}

super + {h, l}
    tbctl --switch-desktop {prev,next}
super + {H, L}
    tbctl --switch-workspace {prev,next}
super + {1-9}
    tbctl --switch-desktop {1-9}
super + shift + {1-9}
    tbctl --switch-workspace {1-9}
super + {W, D}
    tbctl --add-{workspace,desktop} `dmenu -b -fn "Droid Sans Mono:size=8"`
super + N; {W, D}
    tbctl --rename-{workspace,desktop} `dmenu -b -fn "Droid Sans Mono:size=8"`
super + E
    desk=`bspc query -D | sort | dmenu -b -fn "Droid Sans Mono:size=8"` && bspc node -d $desk
super + R
    tbctl --remove-desktop

XF86ScreenSaver
    slimlock
XF86Sleep
    systemctl suspend & slimlock
super + S ; H
    systemctl hibernate & slimlock
super + S ; {P, R}
    {poweroff, reboot}

XF86AudioRaiseVolume
    amixer set Master 5%+ unmute
XF86AudioLowerVolume
    amixer set Master 5%- unmute
XF86AudioMute
    amixer set Master toggle

super + {J, K}
    bspc node -s {next, prev}.local
