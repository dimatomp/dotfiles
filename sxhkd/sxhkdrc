#    bspc node -R {left, down, up, right} {270, 180, 90}

super + button{1,3}
    bspc pointer -g {move, resize_corner}
super + !button{1,3}
    bspc pointer -t %i %i
super + @button{1,3}
    bspc pointer -u

super + p
    pavucontrol

super + shift + button{4,5}
    bspc config -d focused window_gap $((`bspc config -d focused node_gap` {+,-} 1))
super + shift + {underscore,equal}
    bspc config -d focused window_gap {0,6}
